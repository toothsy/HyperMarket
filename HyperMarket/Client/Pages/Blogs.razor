@page "/Blog"
@using HyperMarket.DB.Models
@using HyperMarket.Shared
@using System.ComponentModel.DataAnnotations
@inject HyperMarket.Data.Interfaces.IBlogService blogService

<html>
<style>
     .bg {
         background-color:#cbf0f561;
         /*margin-top: -70px;*/
     }
     .card:hover {
         box-shadow : -1px 9px 40px -12px #808080;
     }
     .title {
          color: #f35555;
     }
     .btn{
         background-color: #f35555;
         border: none;
         height: 32px;
         margin-left: 119px;
         color:white;
     }
     .row {
         padding-bottom: 220px;
     }
     
</style>
<body class = "bg">
<div class = "row">
    @foreach(var item in blogs) {
    <div class = "card" style = "width: 20em;margin-top: 50px;margin-left: 100px;margin-bottom: 50px;height: 250px;">
        <img src = " " class = "card-img-top"/>
        <div class = "card-body">
            <div class = "card-title">
                <h3 class = "title1">@item.BlogTitle</h3> 
            </div>
            <div class = "card-text">
                <p>@item.BlogContent</p>
            </div>
            <a href = "#" class = "btn" >Read More</a> 
        </div>

    </div>
   }

</div>
 <div class = "bottom"></div>
</body>
</html>

